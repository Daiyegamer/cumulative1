@model Cumulative1.Models.Teacher

<style>
    
    .teacher-name {
        font-size: 24px;        
        font-weight: bold;
        color: lightcyan;
        text-align: center;
        margin-bottom: 20px;
        background-color:darkblue;

    }

    
    .teacher-details {
        font-size: 18px;
        color: black;
        margin: 10px 0;
    }

   
    .teacher-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: lightcyan;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

   

    
    .teacher-fields {
        font-weight: bold;
        color: darkblue; 
        font-size:  18px;
    }
    
</style>

<div class="teacher-container">
    <h1 class="teacher-name">@Model.TeacherFName @Model.TeacherLName</h1>
    <p class="teacher-details"><span class="teacher-fields">Employee Number: </span> @Model.EmployeeNumber</p>
    <p class="teacher-details"><span class="teacher-fields">Hire Date: </span> @Model.hiredate.ToString("MMMM dd, yyyy")</p>
    <p class="teacher-details"><span class="teacher-fields">Salary: </span> $@Model.salary</p>
    <p class="teacher-details"><span class="teacher-fields">Courses Taught: </span> @Model.Courses</p>
</div>
@model Cumulative1.Models.Teacher

@if (TempData["SuccessMessage"] != null)
{
    <!-- Display a success message if TempData["SuccessMessage"] is set -->
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<!-- Ensure that the Model is not null to avoid runtime errors -->
@if (Model != null)
{
    <style>
        .teacher-name {
            font-size: 24px;
            font-weight: bold;
            color: lightcyan;
            text-align: center;
            margin-bottom: 20px;
            background-color: darkblue;
            padding: 10px;
            border-radius: 5px;
        }

        .teacher-details {
            font-size: 18px;
            color: black;
            margin: 10px 0;
        }

        .teacher-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background-color: lightcyan;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .teacher-fields {
            font-weight: bold;
            color: darkblue;
            font-size: 18px;
        }
    </style>

    <div class="teacher-container">
        <!-- Display the teacher's full name -->
        <h1 class="teacher-name">@Model.TeacherFName @Model.TeacherLName</h1>

        <!-- Provide a delete confirmation link -->
        <a href="/TeacherPage/DeleteConfirm/@Model.TeacherId">Delete</a>

        <!-- Display teacher details -->
        <p class="teacher-details">
            <span class="teacher-fields">Employee Number:</span> @Model.EmployeeNumber
        </p>
        <p class="teacher-details">
            <span class="teacher-fields">Hire Date:</span> @Model.hiredate.ToString("MMMM dd, yyyy")
        </p>
        <p class="teacher-details">
            <span class="teacher-fields">Salary:</span> $@Model.salary
        </p>
    </div>
}
else
{
    <!-- Display a message if the Model is null -->
    <div class="alert alert-warning">
        Teacher details could not be found. <a href="/TeacherPage/List">Return to the list of teachers</a>.
    </div>
}
